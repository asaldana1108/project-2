<section class="new-post-container">
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title" class="form-label">Title</label>
            <input type="text" id="post-title" class="form-control" name="post-title" />
        </div>
        <div>
            <label for="description" class="form-label">Enter Description</label>
            <input id="description" class="form-control" name="description" />
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link btn btn-info">Edit post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="../public/javascript/add-post.js"></script>