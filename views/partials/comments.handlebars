<div class="comments">
    <h2 class="form-label">Comments</h2>
    {{#each this}}
    <section>
        <div class="comment">
            <div class="text">
                {{comment_text}}
            </div>
            <div class="meta">
                {{user.username}} on {{ format_date created_at}}
            </div>
        </div>
    </section>
    {{/each}}
</div>